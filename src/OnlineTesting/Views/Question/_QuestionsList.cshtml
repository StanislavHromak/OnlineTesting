@model IEnumerable<Question>

@if (Model.Any())
{
    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Текст питання</th>
                    <th class="text-end">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <td>@question.Text</td>
                        <td class="text-end">
                            @if (User.IsInRole("Teacher"))
                            {
                                <a class="btn btn-sm btn-outline-primary me-2" asp-action="Edit" asp-route-id="@question.Id">
                                    ✏️ Редагувати
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@question.Id">
                                    🗑️ Видалити
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning mt-3">
        Для цієї дисципліни ще не додано питань.
    </div>
}


