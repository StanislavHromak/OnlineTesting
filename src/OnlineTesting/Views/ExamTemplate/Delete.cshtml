@using OnlineTesting.Models.DTOs.ExamTemplate
@model ExamTemplateDto

<h2>Видалити шаблон іспиту</h2>

<h3>Ви впевнені, що хочете видалити цей шаблон?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Назва</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Кількість питань</dt>
        <dd class="col-sm-10">@Model.QuestionCount</dd>
        <dt class="col-sm-2">Тривалість (хв)</dt>
        <dd class="col-sm-10">@Model.DurationMinutes</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Видалити</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>