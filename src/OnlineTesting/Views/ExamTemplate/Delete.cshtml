@model OnlineTesting.Models.DTOs.ExamTemplate.ExamTemplateDto

@{
    ViewData["Title"] = "Видалення шаблону іспиту";
}

<div class="container pt-4">
    <div class="alert alert-danger shadow-sm p-4 rounded">
        <h2 class="text-danger mb-3">🗑️ Ви впевнені, що хочете видалити цей шаблон іспиту?</h2>

        <div class="mb-3">
            <label class="form-label fw-bold">Назва шаблону:</label>
            <div class="form-control-plaintext">@Model.Name</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Кількість питань:</label>
            <div class="form-control-plaintext">@Model.QuestionCount</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Тривалість (хв):</label>
            <div class="form-control-plaintext">@Model.DurationMinutes</div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Так, видалити</button>
            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
        </form>
    </div>
</div>


