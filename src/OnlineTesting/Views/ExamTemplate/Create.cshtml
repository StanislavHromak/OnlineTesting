@using OnlineTesting.Models.DTOs.ExamTemplate
@model ExamTemplateDto

<h2>Створити новий шаблон іспиту</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DisciplineId" class="control-label">Дисципліна</label>
        <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.Disciplines"></select>
        <span asp-validation-for="DisciplineId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionCount" class="control-label">Кількість питань</label>
        <input asp-for="QuestionCount" class="form-control" type="number" />
        <span asp-validation-for="QuestionCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DurationMinutes" class="control-label">Тривалість (хв)</label>
        <input asp-for="DurationMinutes" class="form-control" type="number" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Створити</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}