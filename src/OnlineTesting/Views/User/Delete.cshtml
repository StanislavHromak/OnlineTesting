@using OnlineTesting.Models.DTOs.User
@model UserDto

@{
    ViewData["Title"] = "Видалити користувача";
}

<div class="container pt-4">
    <div class="alert alert-danger shadow-sm p-4 rounded">
        <h2 class="text-danger mb-3">🗑️ Ви впевнені, що хочете видалити цього користувача?</h2>

        <div class="mb-3">
            <label class="form-label fw-bold">ПІБ:</label>
            <div class="form-control-plaintext">@Model.FullName</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Email:</label>
            <div class="form-control-plaintext">@Model.Email</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Роль:</label>
            <div class="form-control-plaintext">@Model.Role</div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Так, видалити</button>
            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
        </form>
    </div>
</div>
