@model IEnumerable<Discipline>

@{
    ViewData["Title"] = "Дисципліни";
}

<div class="container pt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Список дисциплін</h2>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Discipline">➕ Додати дисципліну</a>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Назва</th>
                    <th class="text-end">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary me-2" asp-action="Edit" asp-route-id="@item.Id">
                                ✏️ Редагувати
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                🗑️ Видалити
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatable.js"></script>
}

