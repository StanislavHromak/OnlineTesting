@model Discipline

@{
    ViewData["Title"] = "Редагування дисципліни";
}

<div class="container pt-4">
    <h2 class="text-primary mb-4">Редагувати дисципліну: @Model.Name</h2>

    <form asp-action="Edit" method="post" class="shadow rounded p-4 bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Назва дисципліни</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">← Назад</a>
            <button type="submit" class="btn btn-primary">💾 Зберегти</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
